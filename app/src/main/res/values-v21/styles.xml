<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MyGymnasium.NoActionBBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="itemTextAppearance">@style/TextAppearance.AppCompat.Widget.Button.Colored</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowActionModeOverlay">false</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="colorControlNormal">@color/grey</item>
    </style>
    <style name="UnitPickerText">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColorPrimary">@color/blue</item>
        <item name="colorControlNormal">@color/grey</item>
    </style>

</resources>